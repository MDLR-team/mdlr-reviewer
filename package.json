{
  "name": "mdlr-reviewer",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "typescript": "^5.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0"
  },
  "engines": {
    "pnpm": "8.x"
  },
  "scripts": {
    "build": "pnpm -r --workspace-concurrency=1 run build",
    "build:packages": "pnpm -r --filter @mdlr/project --filter @mdlr/ui-kit run build",
    "dev": "pnpm -r --workspace-concurrency=1 run dev",
    "dev:platform": "pnpm -r --filter mdlr-platform run dev",
    "lint": "pnpm -r --workspace-concurrency=1 run lint"
  }
}
